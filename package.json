{
  "name": "veto",
  "version": "0.0.0",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "nodemon",
    "build": "next build && tsc --project tsconfig.server.json",
    "start": "NODE_ENV=${NODE_ENV:-dev} concurrently --kill-others-on-fail 'yarn workspace veto-backend start' 'yarn workspace veto-frontend start'"
  },
  "description": "Veto software",
  "main": "null",
  "repository": "git@github.com:Veriphi/veto.git",
  "author": "Veriphi",
  "license": "PRIVATE",
  "private": true,
  "devDependencies": {
    "husky": "^4.0.6",
    "concurrently": "^5.0.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "echo 'linter & unit tests'"
    }
  }
}
